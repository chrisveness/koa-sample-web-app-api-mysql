{
  "name": "koa-sample-web-app-api-mysql",
  "description": "Koa Sample App (handlebars templating + RESTful API using MySQL, on Node.js)",
  "author": "Chris Veness",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisveness/koa-sample-web-app-api-mysql.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever -c 'node --harmony' --minUptime 1000 --spinSleepTime 1000 app.js",
    "start-dev": "nodemon --harmony -e js,json,html app.js",
    "start-devtools": "nodemon --harmony --inspect -e js,json,html app.js",
    "test": "mocha --harmony test/admin.js test/api.js",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "engines": {
    "node": "^7.2.1"
  },
  "dependencies": {
    "basic-auth": "^1.1.0",
    "bunyan": "^1.8.5",
    "child-process-promise": "^2.2.0",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "forever": "^0.15.3",
    "js-yaml": "^3.7.0",
    "jsdom": "^9.9.1",
    "koa": "^2.0.0",
    "koa-body": "^2.0.0",
    "koa-bunyan": "^1.0.0",
    "koa-compose": "^3.2.1",
    "koa-compress": "^2.0.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "^2.2.0",
    "koa-passport": "^3.0.0-rc.2",
    "koa-router": "^7.0.1",
    "koa-session": "^3.4.0",
    "koa-static": "^3.0.0",
    "markdown-it": "^8.2.2",
    "mysql2": "^1.1.2",
    "mz": "^2.6.0",
    "node-fetch": "^1.6.3",
    "nodejs-info": "^1.0.1",
    "passport-local": "^1.0.0",
    "scrypt": "^6.0.3",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.16.1",
    "chai": "^3.5.0",
    "eslint": "^3.12.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-check": "^5.4.0",
    "npm-check-updates": "^2.8.8",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [ "error", "always", { "singleValue": false } ],
      "comma-dangle": [ "error", "always-multiline" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "no-case-declarations": "off",
      "no-console": [ "warn", { "allow": [ "error", "info" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-await": "error",
      "semi": [ "error", "always" ],
      "strict": [ "error", "global" ]
    }
  }
}
