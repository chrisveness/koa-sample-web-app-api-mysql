{
  "name": "koa-sample-web-app-api-mysql",
  "description": "Koa Sample App (handlebars templating + RESTful API using MySQL, on Node.js)",
  "author": "Chris Veness",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisveness/koa-sample-web-app-api-mysql.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 app.js",
    "start-dev": "nodemon -e js,json,html app.js",
    "test": "mocha test/admin.js test/api.js",
    "lint": "eslint --ignore-pattern apps/api/apidoc .",
    "apidoc": "apidoc -i apps/api -o apps/api/apidoc/apidoc"
  },
  "engines": {
    "node": "^6.0.0"
  },
  "dependencies": {
    "basic-auth": "^1.0.4",
    "bunyan": "^1.8.1",
    "co": "^4.6.0",
    "co-child-process": "^0.0.3",
    "debug": "^2.3.2",
    "forever": "^0.15.2",
    "js-yaml": "^3.6.1",
    "koa": "^1.2.0",
    "koa-body": "^1.4.0",
    "koa-bunyan": "^0.0.2",
    "koa-compose": "^2.4.0",
    "koa-compress": "^1.0.9",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^0.5.7",
    "koa-lusca": "^2.2.0",
    "koa-passport": "^1.3.1",
    "koa-router": "^5.4.0",
    "koa-session": "^3.3.1",
    "koa-static": "^2.0.0",
    "markdown-it": "^6.0.5",
    "mysql2": "^1.1.1",
    "mz": "^2.5.0",
    "node-fetch": "^1.6.3",
    "nodejs-info": "^1.0.1",
    "passport-local": "^1.0.0",
    "scrypt": "^6.0.3",
    "superagent": "^2.0.0",
    "xmlify": "^1.0.1"
  },
  "devDependencies": {
    "apidoc": "^0.16.1",
    "chai": "^3.5.0",
    "cheerio": "^0.20.0",
    "co-supertest": "^0.0.10",
    "eslint": "^3.10.1",
    "mocha": "^3.1.2",
    "nodemon": "^1.9.2",
    "npm-check": "^5.2.1",
    "npm-check-updates": "^2.6.5",
    "supertest": "^1.2.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2015
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [ "error", "always", { "singleValue": false } ],
      "comma-dangle": [ "error", "always-multiline" ],
      "curly": [ "error", "multi-line" ],
      "indent": [ "error", 4, { "SwitchCase": 1 } ],
      "key-spacing": [ "error", { "align": "value" } ],
      "no-case-declarations": "warn",
      "no-console": [ "warn", { "allow": [ "error" ] } ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [ "error", "always" ],
      "prefer-const": "error",
      "quotes": [ "error", "single", "avoid-escape" ],
      "require-yield": "warn",
      "semi": [ "error", "always" ],
      "strict": [ "error", "global" ]
    }
  }
}
